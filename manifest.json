{
    "version": "1.0",
    "manifest_version": 3,
    "name": "Voicepaint",
    "description": "Use voice prompts with LLM providers",
    "permissions": ["activeTab", "audioCapture", "scripting"],
    "action": {
      "default_popup": "ui/popup.html",
      "default_icon": "icons/logo.png"
    },
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": [
                "https://www.meta.ai/"
            ]
        }
    ]
}